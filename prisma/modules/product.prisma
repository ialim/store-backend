// product.prisma
model Product {
  id           String           @id @default(uuid())
  name         String
  description  String?
  barcode      String?          @unique
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  variants     ProductVariant[]
  // Facet assignments (per-product values)
  facets       ProductFacetValue[]
}

// Removed ProductCategory model; classification now via Facets

model ProductVariant {
  id               String   @id @default(uuid())
  // Optional parent product; variants can exist without a product and be linked later
  productId        String?
  // Optional display name for standalone listing pages
  name             String?
  size             String
  concentration    String
  packaging        String
  barcode          String?  @unique
  price            Float
  resellerPrice    Float
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  product          Product? @relation(fields: [productId], references: [id])

  stockItems       Stock[]
  receiptItems     StockReceiptBatchItem[]
  quotationItems   QuotationItem[]
  resellerItems    ResellerSaleItem[]
  consumerItems    ConsumerSaleItem[]
  returnItems      SalesReturnItem[]
  purchaseReturnItems PurchaseReturnItem[]
  transferItems    StockTransferItem[]
  stats            ProductSalesStats?

  PurchaseOrderItem PurchaseOrderItem[]

  StockMovementItem StockMovementItem[]

  PurchaseRequisitionItem PurchaseRequisitionItem[]

  SupplierCatalog SupplierCatalog[]

  SupplierQuoteItem SupplierQuoteItem[]

  ProductVariantTierPrice ProductVariantTierPrice[]

  // Facet assignments (per-variant values)
  facets          VariantFacetValue[]
}


model ProductVariantTierPrice {
  id               String   @id @default(uuid())
  productVariantId String
  tier             UserTier
  price            Float

  variant          ProductVariant @relation(fields: [productVariantId], references: [id])

  @@unique([productVariantId, tier])
}

// ------------------------------------
// Facets & assignments for categorization
// ------------------------------------

model Facet {
  id        String   @id @default(uuid())
  name      String
  code      String   @unique
  isPrivate Boolean  @default(false)
  // Allowed values for this facet (e.g., ["male","female"]) â€” stored as text array
  values    String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Assignments
  products  ProductFacetValue[]
  variants  VariantFacetValue[]
}

model ProductFacetValue {
  id         String  @id @default(uuid())
  productId  String
  facetId    String
  value      String

  product    Product @relation(fields: [productId], references: [id])
  facet      Facet   @relation(fields: [facetId], references: [id])

  @@index([productId])
  @@index([facetId])
  @@unique([productId, facetId, value], name: "product_facet_value_unique")
}

model VariantFacetValue {
  id               String  @id @default(uuid())
  productVariantId String
  facetId          String
  value            String

  variant          ProductVariant @relation(fields: [productVariantId], references: [id])
  facet            Facet          @relation(fields: [facetId], references: [id])

  @@index([productVariantId])
  @@index([facetId])
  @@unique([productVariantId, facetId, value], name: "variant_facet_value_unique")
}
